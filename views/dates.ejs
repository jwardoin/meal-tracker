<%- include("partials/header.ejs") %>

<h1>App Name</h1>
<form>
  <input id="date" type="date" />
  <select id="mealType">
    <option value="breakfast">Breakfast</option>
    <option value="lunch">Lunch</option>
    <option value="dinner">Dinner</option>
  </select>
  <input id="foodItems" type="text" />
  <input id="create" type="submit" />
</form>

<!-- Dates will render here - each date needs a data-id attribute for delete to work -->
<section>
  <% for(let date of dates) { %> <!-- loop through dates -->
    <div class="entry" data-date="<%=date.date%>" data-id="<%=date._id%>"> <!-- one entry for each date -->
      <h2><%= date.date %></h2>

      <div class="entry-container"> <!-- flexbox container -->
        <!-- meal items -->
        <div class="meal">
          <h3>Breakfast</h3>
          <p class="meal-item">
            <%= date.breakfast ? date.breakfast : "Looks like you didn't have breakfast on this day" %>
          </p>
        </div>

        <div class="meal">
          <h3>Lunch</h3>
          <p class="meal-item">
            <%= date.lunch ? date.lunch : "Looks like you didn't have lunch on this day" %>
          </p>
        </div>

      <div class="meal">
        <h3>Dinner</h3>
        <p class="meal-item">
          <%= date.dinner ? date.dinner : "Looks like you didn't have dinner on this day" %>
        </p>
      </div>
      <button class="del">Delete</button>
    </div>
  </div>
  <% } %>
</section>

<a href="/logout">Logout</a>

<%- include("partials/footer.ejs") %>